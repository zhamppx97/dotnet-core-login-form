@model LoginViewModel

<div class="login-content">
    <div class="text-align-center">
        <h2>dotNet Core 3.0 - Login form example</h2>
    </div>
    <br>
    @if (ViewBag.Alert != null)
    {
        <div class="alert alert-danger alert-dismissable">
            <h4>@ViewBag.Alert.ToString()</h4>
        </div>
    }

    @using (Html.BeginForm("Authentication", "Login", FormMethod.Post, new { role = "form" }))
    {
        <div class="login-box">
            <div class="login-form" runat="server">
                <h3 class="login-head">Login</h3>
                <div class="form-group">
                    <label class="control-label">Username:</label>
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @autofocus = "" })
                    <label class="control-label">Password:</label>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type= "password" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">LOGIN</button>
                </div>
                <div class="form-group btn-container">
                    <label class="control-label">Powered by: zhamppx97</label><br>
                    <label class="control-label">Theme: Vali Admin</label>
                </div>
            </div>
        </div>
    }
</div>
